<UserControl
    x:Class="Kok.Test.WpfDemo.Views.DialogDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kok.Test.WpfDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding OtherModel.Message}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox
                Name="MyText"
                Width="150"
                Height="20"
                Text="{Binding Text}" />
            <Button
                Command="{Binding ShowParameterWinCommand}"
                CommandParameter="{Binding Text, ElementName=MyText}"
                Content="Show Dialog" />

            <Button
                Grid.Row="0"
                Width="150"
                Height="50"
                Command="{Binding ShowLogWinCommand}"
                Content="Show Log Message" />
        </StackPanel>
    </Grid>
</UserControl>